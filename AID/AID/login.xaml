<Window x:Class="AID.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AID"
        xmlns:userControls="clr-namespace:AID.View.UserControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="login"
        Height="550"
        ResizeMode="NoResize"
        Icon="/Red-Cross.ico"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style TargetType="Button"
               x:Key="btnLog">
            <Setter Property="Background"
                    Value="Black" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="DarkGray" />
                    <Setter Property="Foreground"
                            Value="Black" />
                </Trigger>
                <Trigger Property="IsMouseCaptured"
                         Value="True">
                    <Setter Property="Background"
                            Value="LightGray" />
                    <Setter Property="Foreground"
                            Value="Black" />
                </Trigger>

            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="Red" />
                    <Setter Property="Foreground"
                            Value="White" />
                </Trigger>
                <Trigger Property="IsMouseCaptured"
                         Value="True">
                    <Setter Property="Background"
                            Value="Salmon" />
                    <Setter Property="Foreground"
                            Value="White" />
                </Trigger>

            </Style.Triggers>
        </Style>


    </Window.Resources>
    <Border Width="400"
            Height="550"
            Background="White"
            CornerRadius="50">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1.75*" />
            </Grid.RowDefinitions>
            <Image Height="147"
                   Margin="25"
                   Width="250"
                   Source="/Untitled.png"
                   Stretch="UniformToFill" />
            <userControls:TextBox1 Grid.Row="1"
                                   x:Name="txtUser"
                                   Width="300"
                                   Height="50"
                                   DefText=""
                                   Placeholder="نام کاربری">
            </userControls:TextBox1>
            <userControls:TextBox1 x:Name="txtPass"
                                   Grid.Row="2"
                                   Width="300"
                                   Height="50"
                                   DefText=""
                                   Placeholder="رمز عبور">
            </userControls:TextBox1>
            <Button Grid.Row="3"
                    x:Name="btnSubmit"
                    Width="200"
                    Style="{StaticResource btnLog}"
                    Height="75"
                    Click="btnSubmit_Click"
                    FontSize="30"
                    FontFamily="b"
                    Content="ورود">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius"
                                Value="35" />
                    </Style>
                </Button.Resources>
            </Button>
            <CheckBox Content="نشان دادن رمز عبور"
                      HorizontalAlignment="Left"
                      Height="17"
                      x:Name="chbxPass"
                      Margin="244,0,0,0"
                      Grid.Row="3"
                      VerticalAlignment="Top"
                      Width="120"
                      Click="chbxPass_Click"
                      IsChecked="True"
                      IsEnabled="False"
                      Unchecked="chbxPass_Unchecked"
                      Checked="CheckBox_Checked" />
            <Border Background="Red"
                    CornerRadius="10"
                    Grid.Row="3"
                    x:Name="bortxError"
                    Width="215"
                    Height="25"
                    Margin="10,0,175,140"
                    Visibility="Hidden"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                <TextBlock x:Name="txError"
                           FontSize="13"
                           Grid.Row="3"
                           HorizontalAlignment="Center"
                           Height="20"
                           Width="auto"
                           Foreground="White"
                           FontWeight="Bold"
                           Text="نام کاربری یا کلمه عبور اشتباه وارد شده" />
            </Border>
            <Button Content="X"
                    HorizontalAlignment="Left"
                    Height="50"
                    Margin="300,0,0,0"
                    VerticalAlignment="Top"
                    Width="100"
                    FontSize="20"
                    Click="Button_Click"
                    BorderBrush="{x:Null}">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="0,50,0,50" />
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock HorizontalAlignment="Left"
                       Height="17"
                       Margin="50,10,0,0"
                       x:Name="txstar1"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       Text="*"
                       FontSize="20"
                       FontWeight="Bold"
                       Visibility="Hidden"
                       Foreground="Red"
                       VerticalAlignment="Top"
                       Width="14" />
            <TextBlock HorizontalAlignment="Left"
                       Height="17"
                       Margin="50,10,0,0"
                       x:Name="txstar2"
                       Grid.Row="2"
                       TextWrapping="Wrap"
                       Text="*"
                       FontSize="20"
                       Visibility="Hidden"
                       FontWeight="Bold"
                       Foreground="Red"
                       VerticalAlignment="Top"
                       Width="14" />
        </Grid>
    </Border>
</Window>
