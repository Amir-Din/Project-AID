<Window x:Class="AID.CharitySearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AID"
        xmlns:userControls="clr-namespace:AID.View.UserControls"
        mc:Ignorable="d"
        Title="CharitySearch"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Icon="/Red-Cross.ico"
        Height="235"
        Width="400">

    <StackPanel>
        <TextBlock Height="30"
                   Text=":جستجو خیریه"
                   Width="100" 
                   Margin="0,10,0,0"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBox Width="275"
                 TextChanged="txtCharitySearch_TextChanged"
                 Height="50"
                 x:Name="txtCharitySearch"
                 Margin="0,0,0,10"
                 HorizontalContentAlignment="Center"
                 TextAlignment="Center"
                 VerticalContentAlignment="Center"
                 Padding="5"
                 FontSize="18"
                 MaxLength="35"
                 Background="Transparent">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius"
                            Value="25" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <ListBox x:Name="lstsearch"
                 Width="275"
                 HorizontalContentAlignment="Center"
                 FontSize="18"
                 SelectionChanged="lstsearch_SelectionChanged"
                 Padding="5"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="0,0,0,7"
                 Height="0">
            <ListBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius"
                            Value="25" />
                </Style>
            </ListBox.Resources>
        </ListBox>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="btnSearchCharityOK"
                    Width="130"
                    Height="65"
                    FontSize="18"
                    Content="تائید"
                    Click="btnSearchCharityOK_Click"
                    Style="{StaticResource RoundButAcc}" />
            <Button x:Name="btnSearchCharityCancel"
                    Width="130"
                    Height="65"
                    FontSize="18"
                    Content="لغو"
                    Click="btnSearchCharityCancel_Click"
                    Style="{StaticResource RoundButRej}" />
        </StackPanel>
    </StackPanel>
</Window>
