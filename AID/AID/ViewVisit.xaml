<Window x:Class="AID.ViewVisit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AID"
        mc:Ignorable="d"
        Title="ViewVisit"
        Height="450"
        Width="350"
        Icon="/Red-Cross.ico"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Loaded="Window_Loaded">
    <Grid Background="#FFE5E5E5">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="225" />
            <RowDefinition Height="135" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Border Background="White"
                    Width="300"
                    CornerRadius="30"
                    BorderBrush="DarkGray"
                    BorderThickness="3"
                    Margin="0,10,0,0"
                    Grid.Row="0">
                <TextBlock Text="00:00"
                           x:Name="txVtime"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="50"
                           Height="70" />
            </Border>
        </StackPanel>
        <Border Background="White"
                Width="300"
                Grid.Row="1"
                CornerRadius="30"
                BorderBrush="DarkGray"
                BorderThickness="3"
                Margin="0,10,0,0"
                Height="210">
            <StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            Height="45">
                    <TextBlock x:Name="txVnamefam"
                               Text="0000000000000000"
                               FontSize="15"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="10"/>
                    <TextBlock Text=":نام و نام خانوادگی"
                               FontSize="15"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="10"
                               Foreground="#FF7C7C7C" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0"
                            Height="45">
                    <TextBlock x:Name="txVphone"
                               Text="0000000000"
                               FontSize="18"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="30,0" />
                    <TextBlock Text=":شماره تلفن"
                               FontSize="18"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="25,0"
                               Foreground="#FF7C7C7C" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0"
                            Height="45">
                    <TextBlock x:Name="txVid"
                               Text="0000000000"
                               FontSize="18"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,40,0" />
                    <TextBlock Text=":کد ملی"
                               FontSize="18"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="25,0,15,0"
                               Foreground="#FF7C7C7C" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="1.25"
                            Height="45">
                    <TextBlock x:Name="txVinsure"
                               Text="0000000000000000"
                               FontSize="15"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="10,0,2,0" />
                    <TextBlock Text=":مبنا محاسبه"
                               FontSize="18"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="25,0,15,0"
                               Foreground="#FF7C7C7C" />
                </StackPanel>
            </StackPanel>
        </Border>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="2"
                    Margin="0,0,0,35">
            <Button x:Name="btnAccVis"
                    Click="btnAccVis_Click"
                    Content="ثبت ویزیت"
                    Width="140"
                    Margin="10,0"
                    Height="70"
                    FontSize="18"
                    Style="{StaticResource RoundButAcc}" />
            <Button x:Name="btnCancelVis"
                    Click="btnCancelVis_Click"
                    Content="لغو ویزیت"
                    Width="140"
                    Margin="10,0"
                    Height="70"
                    FontSize="18"
                    Style="{StaticResource RoundButRej}" />
        </StackPanel>
    </Grid>
</Window>
