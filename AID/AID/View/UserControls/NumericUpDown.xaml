<UserControl x:Class="AID.View.UserControls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AID.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="35"
             d:DesignWidth="160"
             Loaded="UserControl_Loaded">
    <Grid>
        <Border Background="White"
                CornerRadius="17.5"
                BorderBrush="DarkGray"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="NumricDown"
                        Content="˅"
                        Style="{StaticResource usercontrolUpDownBut}"
                        Click="NumricDown_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius"
                                    Value="17" />
                            <Setter Property="BorderThickness"
                                    Value="0" />
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock Text="0"
                           x:Name="txNumricUpDown"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="20" 
                           Margin="40,0"/>
                <Button x:Name="NumricUp"
                        Content="˄"
                        Style="{StaticResource usercontrolUpDownBut}"
                        Click="NumricUp_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius"
                                    Value="17" />
                            <Setter Property="BorderThickness"
                                    Value="0" />
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
